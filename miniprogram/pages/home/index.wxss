/* 整体容器 */
.container {
  padding: 0;
  margin: 0;
  display: flex;
  height: 100vh;
  flex-direction: column;
  background-color: var(--bgColor);
}

/* 标题区域 */
.title {
  width: 100%;
  margin: 0;
}

.title-text {
  display: inline-block;
  padding: 0 var(--spacing-left);
}

/* 按钮容器样式 */
.toggle-container {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  background-color: var(--btnColor);
  border-radius: 16rpx;
  border: 2rpx dashed var(--borderColor);
  overflow: hidden;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  margin: auto;
}

/* 按钮基础样式 */
.toggle-button {
  flex: 1;
  text-align: center;
  padding: 12rpx 16rpx;
  font-size: var(--font-normal);
  color: #fff;
  font-weight: bold;
  transition: all 0.3s ease;
}

/* 被选中的按钮样式 */
.toggle-button.selected {
  background-color: var(--btnSelected);
  color: #fff;
  box-shadow: inset 0 0 4rpx rgba(0, 0, 0, 0.2);
}

/* 列表区域 */
.poll-list {
  background: var(--bgColor);
  width: 100%;
  flex: 1;
}

/* 投票项容器 */
.poll-item-container {
  padding: var(--spacing-left);
}

/* 内容包装器 */
.content-wrapper {
  display: flex;
  height: 100%;
}

/* 投票项主体内容 */
.poll-item {
  flex: 1;
  box-sizing: border-box;
  background: var(--listBackgroundColor);
  padding: 20rpx 0;
  border-bottom: 3rpx dashed var(--dividerColor);
}

/* 投票标题 */
.poll-title {
  font-size: var(--font-medium);
  font-weight: 500;
  color: var(--textColor);
  margin-bottom: 24rpx;
}

/* 投票截止时间和票数 */
.poll-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: var(--font-small);
  color: var(--subTextColor);
}

.error {
  text-align: center;
  color: var(--subTextColor);
  padding: 40rpx;
  font-size: var(--font-normal);
}

.empty,
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  color: #999;
}