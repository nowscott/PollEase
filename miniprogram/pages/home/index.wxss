/* 整体容器 */
.container {
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: var(--notion-bg);
}

/* 列表区域 - 最外层容器 */
.poll-list {
  height: 60vh;
  margin: 0;
  margin-top: 100rpx;
}

/* scroll-view 的容器 */
.poll-list-inner {
  height: 100%;
  border: 1rpx solid var(--notion-border);
  background-color: var(--notion-white);
  margin: 16rpx;
}

/* 投票项容器 */
.poll-item-container {
  padding: 0;
  margin: 0;
  width: 100%;
  background-color: var(--notion-bg);
  border-bottom: 1rpx solid var(--notion-border);
}

/* 移除最后一个元素的分隔线 */
.poll-item-container:last-child {
  border-bottom: none;
}

.movable-area {
  width: 100%;
  height: 160rpx;
  position: relative;
  background: var(--notion-bg);
  overflow: hidden;
}

.movable-view {
  width: calc(100% + 160rpx);
  height: 160rpx;
  z-index: 2;
  background: var(--notion-white);
}

/* 新增内容包装器样式 */
.content-wrapper {
  display: flex;
  width: 100%;
  height: 100%;
  transform: translateX(0);
  background: var(--notion-white);
}

/* 投票项主体内容 */
.poll-item {
  flex: 1;
  height: 160rpx;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  background: var(--notion-white);
  border-bottom: 1rpx solid var(--notion-border);
}

.poll-title {
  font-size: var(--font-medium);
  color: var(--notion-text);
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.poll-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: var(--font-small);
  color: var(--notion-text-light);
}

/* 删除按钮 */
.delete-btn {
  height: 160rpx;
  background: var(--color-error);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-medium);
  flex-shrink: 0;
  transition: all 0.2s ease-out;
  width: 160rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

/* 拉伸状态的样式 */
.delete-btn.stretching {
  width: 240rpx;
  opacity: 0.9;
  letter-spacing: 4rpx;
  background: #ff3b30;
}

/* 添加即将删除状态 */
.delete-btn.will-delete {
  width: 640rpx;
  opacity: 0.95;
  font-size: 32rpx;
  letter-spacing: 12rpx;
  background: #ff1a1a;
  padding: 0 48rpx;
}

/* 空状态和错误状态 */
.empty, .error {
  text-align: center;
  color: var(--notion-text-light);
  padding: 40rpx;
  font-size: var(--font-normal);
}

.loading {
  text-align: center;
  color: var(--notion-text-light);
  padding: 40rpx;
  font-size: var(--font-normal);
}

.retry-btn {
  min-width: 160rpx;
  width: fit-content;
  height: 80rpx;
  background-color: var(--color-warning);
  color: var(--notion-text);
  margin-top: 20rpx;
  border: 2rpx solid var(--notion-border);
  border-radius: 20rpx;
  font-size: var(--font-normal);
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
}

/* 底部按钮容器 */
.btn-container {
  padding: 32rpx 48rpx 48rpx;
  background: var(--notion-bg);
  display: flex;
  justify-content: center;
}

.btn-group {
  display: flex;
  gap: 24rpx;
  width: 100%;
}

.submit-btn {
  min-width: 160rpx;
  width: fit-content;
  height: 88rpx;
  background: var(--color-warning);
  color: var(--notion-text);
  font-size: var(--font-medium);
  font-weight: 500;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid var(--notion-border);
  padding: 0 48rpx;
  white-space: nowrap;
}

.submit-btn:active {
  background: var(--color-warning-hover);
}

.submit-btn.half {
  flex: 1;
}

/* 第一个投票项容器添加上边框 */
.poll-item-container:first-child {
  border-top: 1rpx solid var(--notion-border);
}

