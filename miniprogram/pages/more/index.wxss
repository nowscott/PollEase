/* 整体容器 */
.container {
  padding: 0;
  margin: 0;
  display: flex;
  height: 100vh;
  flex-direction: column;
  background-color: var(--bgColor);
  min-height: 100vh;
}

/* 标题区域 */
.title {
  width: 100%;
  margin: 0;
  box-shadow: var(--boxShadow);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  background-color: var(--bgColor);
}

.title-text {
  display: inline-block;
  padding: 0 var(--spacing-left);
}

/* 内容样式 */
.content {
  font-size: var(--font-normal);
  color: var(--subTextColor);
  padding: 20rpx;
  margin-top: 12rpx;
  overflow-y: auto;
  flex: 1;
}

/* 统计盒子 */
.stats-box {
  background: var(--tabBarBgColor);
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 24px;
  font-weight: bold;
  color: var(--textColor);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 12px;
  color: var(--subTextColor);
}

/* 部分 */
.section {
  background: var(--tabBarBgColor);
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 16px;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: var(--textColor);
}

.section-content {
  font-size: 14px;
  color: var(--subTextColor);
  line-height: 1.6;
}

/* 联系方式 */
.contact-list {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.contact-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.contact-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 10rpx;
}

/* 页脚 */
.footer {
  text-align: center;
}

.icp {
  font-size: 12px;
  color: var(--subTextColor);
}
