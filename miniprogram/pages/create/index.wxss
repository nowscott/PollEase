.page-wrapper {
  background-color: var(--backgroundColor);
  min-height: 100vh;
  color: var(--textColor);
}

.container {
  margin: 0;
  padding: 0;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 标题区域样式 */
.poll-header {
  margin: 0;
  padding: 100rpx 48rpx 48rpx;
  width: 100%;
  box-sizing: border-box;
  background: var(--backgroundColor);
}

.poll-title {
  font-size: var(--font-large);
  font-weight: 600;
  color: var(--textColor);
  line-height: 1.3;
  letter-spacing: -0.02em;
}

/* 内容区域 */
.poll-content {
  width: 100%;
  margin: 0;
  flex: 1;
  padding: 24rpx 24rpx;
  background: var(--backgroundColor);
  box-sizing: border-box;
}

.form-group {
  margin-bottom: 48rpx;
}

.form-label {
  font-size: var(--font-normal);
  color: var(--textColor-light);
  margin-bottom: 16rpx;
  display: block;
  padding: 0 24rpx;
}

.input-box {
  margin-bottom: 24rpx;
  padding: 0 24rpx;
}

.title-input {
  width: 100%;
  height: 88rpx;
  background: var(--notion-white);
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: var(--font-medium);
  color: var(--textColor);
  box-sizing: border-box;
  border: 2rpx solid var(--notion-border);
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 0 24rpx;
}

.option-item {
  position: relative;
  width: 100%;
}

.option-input {
  width: 100%;
  height: 88rpx;
  background: var(--notion-white);
  border-radius: 20rpx;
  padding: 0 24rpx;
  padding-right: 80rpx;
  font-size: var(--font-medium);
  color: var(--textColor);
  box-sizing: border-box;
  border: 2rpx solid var(--notion-border);
}

.delete-option {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: var(--color-error);
  font-size: var(--font-large);
  width: 44rpx;
  height: 44rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
}

/* 底部按钮容器 */
.btn-container {
  padding: 32rpx 48rpx calc(32rpx + env(safe-area-inset-bottom));
  background: var(--backgroundColor);
  display: flex;
  justify-content: center;
}

/* 创建按钮 */
.submit-btn {
  min-width: 160rpx;
  width: fit-content;
  height: 88rpx;
  background: var(--color-warning);
  color: var(--textColor);
  font-size: var(--font-medium);
  font-weight: 500;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid var(--notion-border);
  padding: 0 48rpx;
  white-space: nowrap;
}

/* 添加选项按钮 */
.add-option-btn {
  min-width: 160rpx;
  width: fit-content;
  height: 80rpx;
  background: var(--notion-white);
  color: var(--textColor);
  font-size: var(--font-normal);
  border: 2rpx solid var(--notion-border);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  margin: 32rpx auto;
  white-space: nowrap;
}

/* 删除选项按钮 */
.delete-option-btn {
  min-width: 80rpx;
  width: auto;
  height: 60rpx;
  background: var(--notion-white);
  color: var(--color-error);
  font-size: var(--font-small);
  border: 1rpx solid var(--notion-border);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  margin-left: 16rpx;
}

/* 覆盖微信小程序默认的禁用按钮样式 */
.submit-btn[disabled] {
  background-color: var(--color-warning) !important;
  color: var(--color-disabled-text) !important;
  border-color: var(--notion-border) !important;
}

/* 调整输入框在深色模式下的样式 */
.title-input, .option-input {
  background: var(--notion-white);
  color: var(--textColor);
  border-color: var(--notion-border);
}

@media (prefers-color-scheme: dark) {
  .title-input:focus, .option-input:focus {
    border-color: var(--textColor-light);
  }
  
  .submit-btn {
    background: var(--color-warning);
    border-color: var(--notion-border);
  }
  
  .submit-btn:active:not(.disabled) {
    background: var(--color-warning-hover);
  }
}

.textarea {
  width: 100%;
  height: 120rpx;
  background: var(--notion-white);
  border-radius: 20rpx;
  padding: 24rpx;
  font-size: var(--font-medium);
  color: var(--textColor);
  box-sizing: border-box;
  border: 2rpx solid var(--notion-border);
}

/* 调整深色模式下的样式 */
@media (prefers-color-scheme: dark) {
  .textarea:focus {
    border-color: var(--textColor-light);
  }
}