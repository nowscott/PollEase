/* 整体容器 */
.container {
  padding: 0;
  margin: 0;
  display: flex;
  height: 100vh;
  flex-direction: column;
  background-color: var(--bgColor);
  position: relative;
}

/* 标题区域 */
.title {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  margin: 0;
  display: flex;
  align-items: center;
  background-color: var(--bgColor);
  z-index: 100;
  box-shadow: var(--boxShadow);
}

/* 标题文本 */
.title-text {
  display: inline-block;
  padding: 0 var(--spacing-left);
  background-color: var(--backgroundColor);
}

/* 返回按钮样式 */
.return-btn {
  width: 48rpx;
  height: 48rpx;
  margin-left: var(--spacing-left);
  background-color: var(--backgroundColor);
}

/* 标题区域样式 */
.poll-header {
  margin: 0;
  padding: 24rpx;
  width: 100%;
  box-sizing: border-box;
  background: var(--backgroundColor);
}

.poll-title {
  font-size: var(--font-xlarge);
  font-weight: 600;
  color: var(--textColor);
  letter-spacing: 0.05em;
}

/* 内容包装器 */
.content-wrapper {
  flex: 1;
  margin-bottom: 0;
  width: 100%;
  overflow: hidden;
  position: relative;
}

/* 内容区域 */
.poll-content {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  background-color: var(--bgColor);
  padding: 24rpx 0;
  margin-bottom: 0;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 48rpx;
}

.form-label {
  font-size: var(--font-normal);
  color: var(--textColor);
  margin-bottom: 16rpx;
  display: block;
  padding: 0 24rpx;
}

.input-box {
  margin: 0 24rpx;
  padding: 0;
  background: none;
  box-sizing: border-box;
}

.title-input,
.textarea {
  background: var(--inputBgColor);
  border-radius: 20rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.title-input {
  width: 100%;
  height: 88rpx;
  font-size: var(--font-medium);
  color: var(--textColor);
  border: 2rpx dashed var(--borderColor);
  outline: none;
}

.title-input,
.option-input {
  padding: 0 24rpx;
  box-sizing: border-box;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 0 24rpx;
}

.option-item {
  position: relative;
  width: 100%;
}

.option-input {
  width: 100%;
  height: 88rpx;
  background: var(--inputBgColor);
  border-radius: 20rpx;
  padding: 0 24rpx;
  padding-right: 80rpx;
  font-size: var(--font-medium);
  color: var(--textColor);
  box-sizing: border-box;
  border: 2rpx dashed var(--borderColor);
}

.delete-option {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: var(--color-error);
  font-size: var(--font-large);
  width: 44rpx;
  height: 44rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
}

/* 底部tabbar */
.toggle-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  background-color: var(--tabBarBgColor);
  padding-bottom: calc(env(safe-area-inset-bottom) + 12rpx);
  border-top: 1px solid var(--tabBarBorderColor);
}

/* 按钮基础样式 */
.toggle-button {
  width: 100%;
  text-align: center;
  padding: 12rpx 16rpx;
  font-size: var(--font-normal);
  font-weight: bold;
  transition: all 0.3s ease;
  background: var(--btnSelected);
  color: #fff;
  border: 3rpx dashed var(--borderColor);
  border-radius: 16rpx;
  line-height: 2;
}

.toggle-button.disabled {
  background: var(--btnColor);
  color: var(--subTextColor);
  border-color: var(--borderColor);
}

.toggle-button::after {
  border: none;
}

/* 删除选项按钮 */
.delete-option-btn {
  min-width: 80rpx;
  width: auto;
  height: 60rpx;
  color: var(--color-error);
  font-size: var(--font-small);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  margin-left: 16rpx;
}

/* 调整输入框在深色模式下的样式 */
.title-input,
.option-input {
  background: var(--inputBgColor);
  color: var(--textColor);
  border-color: var(--borderColor);
}

.textarea {
  width: 100%;
  height: 120rpx;
  border-radius: 20rpx;
  padding: 24rpx;
  font-size: var(--font-medium);
  color: var(--textColor);
  box-sizing: border-box;
  border: 2rpx dashed var(--borderColor);
}