/* 整体容器 */
.container {
  padding: 0;
  margin: 0;
  display: flex;
  height: 100vh;
  flex-direction: column;
  background-color: var(--bgColor);
}

/* 标题区域 */
.title {
  width: 100%;
  margin: 0;
}

/* 返回按钮样式 */
.return-btn {
  width: 48rpx;
  height: 48rpx;
  display: inline-block;
  padding: 0 var(--spacing-left);
}

/* 标题区域样式 */
.poll-header {
  margin: 0;
  padding: 24rpx;
  width: 100%;
  box-sizing: border-box;
  background: var(--backgroundColor);
}

.poll-title {
  font-size: var(--font-xlarge);
  font-weight: 600;
  color: var(--textColor);
  letter-spacing: 0.05em;
}

/* 内容区域 */
.poll-content {
  margin: 0;
  flex: 0 1 auto;
  padding: 24rpx;
  background: var(--backgroundColor);
  box-sizing: border-box;
}

.form-group {
  margin-bottom: 48rpx;
}

.form-label {
  font-size: var(--font-normal);
  color: var(--textColor);
  margin-bottom: 16rpx;
  display: block;
  padding: 0 24rpx;
}

.input-box {
  margin: 0 24rpx;
  padding: 0;
  background: none;
  box-sizing: border-box;
}

.title-input,
.textarea {
  background: var(--inputBgColor);
  border-radius: 20rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.title-input {
  width: 100%;
  height: 88rpx;
  font-size: var(--font-medium);
  color: var(--textColor);
  border: 2rpx dashed var(--borderColor);
  outline: none;
}

.title-input,
.option-input {
  padding: 0 24rpx;
  box-sizing: border-box;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 0 24rpx;
}

.option-item {
  position: relative;
  width: 100%;
}

.option-input {
  width: 100%;
  height: 88rpx;
  background: var(--inputBgColor);
  border-radius: 20rpx;
  padding: 0 24rpx;
  padding-right: 80rpx;
  font-size: var(--font-medium);
  color: var(--textColor);
  box-sizing: border-box;
  border: 2rpx dashed var(--borderColor);
}

.delete-option {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: var(--color-error);
  font-size: var(--font-large);
  width: 44rpx;
  height: 44rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
}

/* 底部按钮容器 */
.btn-container {
  background: var(--backgroundColor);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 创建按钮 */
.submit-btn {
  min-width: 160rpx;
  width: fit-content;
  height: 88rpx;
  background: var(--btnSelected);
  color: #fff;
  font-size: var(--font-medium);
  font-weight: 500;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed var(--borderColor);
  padding: 0 48rpx;
  white-space: nowrap;
}

.submit-btn.disabled {
  background-color: var(--btnColor); 
  color: #666; 
  border-color: var(--borderColor); 
  cursor: not-allowed; 
}

/* 添加选项按钮 */
.add-option-btn {
  min-width: 160rpx;
  width: fit-content;
  height: 80rpx;
  background: var(--notion-white);
  color: var(--textColor);
  font-size: var(--font-normal);
  border: 2rpx dashed var(--notion-border);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  margin: 32rpx auto;
  white-space: nowrap;
}

/* 删除选项按钮 */
.delete-option-btn {
  min-width: 80rpx;
  width: auto;
  height: 60rpx;
  background: var(--notion-white);
  color: var(--color-error);
  font-size: var(--font-small);
  border: 2rpx dashed var(--notion-border);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  margin-left: 16rpx;
}

/* 调整输入框在深色模式下的样式 */
.title-input,
.option-input {
  background: var(--inputBgColor);
  color: var(--textColor);
  border-color: var(--borderColor);
}

.textarea {
  width: 100%;
  height: 120rpx;
  border-radius: 20rpx;
  padding: 24rpx;
  font-size: var(--font-medium);
  color: var(--textColor);
  box-sizing: border-box;
  border: 2rpx dashed var(--borderColor);
}