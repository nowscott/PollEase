.page-wrapper {
  background-color: #fafafa;
  min-height: 100vh;
  color: #37352f;
}

.container {
  margin: 0;
  padding: 0;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 标题区域样式 */
.poll-header {
  margin: 0;
  padding: 60rpx 48rpx 48rpx;
  width: 100%;
  box-sizing: border-box;
}

.poll-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #37352f;
  line-height: 1.3;
  letter-spacing: -0.02em;
}

/* 内容区域 */
.poll-content {
  width: 100%;
  margin: 0;
  flex: 1;
  padding: 24rpx 24rpx;
  background: #fff;
  box-sizing: border-box;
}

.form-group {
  margin-bottom: 48rpx;
}

.form-label {
  font-size: 28rpx;
  color: #787774;
  margin-bottom: 16rpx;
  display: block;
  padding: 0 24rpx;
}

.input-box {
  margin-bottom: 24rpx;
  padding: 0 24rpx;
}

.title-input {
  width: 100%;
  height: 88rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #37352f;
  box-sizing: border-box;
  border: 2rpx solid #d1d3d4;
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 0 24rpx;
}

.option-item {
  position: relative;
  width: 100%;
}

.option-input {
  width: 100%;
  height: 88rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 0 24rpx;
  padding-right: 80rpx;
  font-size: 32rpx;
  color: #37352f;
  box-sizing: border-box;
  border: 2rpx solid #d1d3d4;
}

.delete-option {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #ff4d4f;
  font-size: 40rpx;
  width: 44rpx;
  height: 44rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
}

/* 按钮容器 */
.btn-container {
  padding: 32rpx 48rpx 48rpx;
  background: #fff;
  border-top: 2rpx solid #f0f0f0;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #fff9e6;
  color: #37352f;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #d1d3d4;
}

.submit-btn.disabled {
  background: #f5f5f5;
  color: #999;
  border-color: #e8e8e8;
}
