.page-wrapper {
  background-color: var(--notion-bg);
  min-height: 100vh;
  color: var(--notion-text);
}

.container {
  margin: 0;
  padding: 0;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 标题区域样式 */
.poll-header {
  margin: 0;
  padding: 60rpx 48rpx 48rpx;
  width: 100%;
  box-sizing: border-box;
  background: var(--notion-bg);
}

.poll-title {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--notion-text);
  line-height: 1.3;
  letter-spacing: -0.02em;
}

/* 内容区域 */
.poll-content {
  width: 100%;
  margin: 0;
  flex: 1;
  padding: 24rpx 24rpx;
  background: var(--notion-bg);
  box-sizing: border-box;
}

.form-group {
  margin-bottom: 48rpx;
}

.form-label {
  font-size: 28rpx;
  color: var(--notion-text-light);
  margin-bottom: 16rpx;
  display: block;
  padding: 0 24rpx;
}

.input-box {
  margin-bottom: 24rpx;
  padding: 0 24rpx;
}

.title-input {
  width: 100%;
  height: 88rpx;
  background: var(--notion-white);
  border-radius: 20rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: var(--notion-text);
  box-sizing: border-box;
  border: 2rpx solid var(--notion-border);
}

.options-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 0 24rpx;
}

.option-item {
  position: relative;
  width: 100%;
}

.option-input {
  width: 100%;
  height: 88rpx;
  background: var(--notion-white);
  border-radius: 20rpx;
  padding: 0 24rpx;
  padding-right: 80rpx;
  font-size: 32rpx;
  color: var(--notion-text);
  box-sizing: border-box;
  border: 2rpx solid var(--notion-border);
}

.delete-option {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: var(--color-error);
  font-size: 40rpx;
  width: 44rpx;
  height: 44rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
}

/* 按钮容器 */
.btn-container {
  padding: 32rpx 48rpx 48rpx;
  background: var(--notion-bg);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: var(--color-warning-hover);
  color: var(--notion-text);
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid var(--notion-border);
}

.submit-btn:active:not(.disabled) {
  background: var(--color-success);
}

/* 覆盖微信小程序默认的禁用按钮样式 */
.submit-btn[disabled] {
  background-color: var(--color-warning) !important;
  color: var(--color-disabled-text) !important;
  border-color: var(--notion-border) !important;
}