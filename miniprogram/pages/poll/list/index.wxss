/* 整体容器 */
.container {
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #fff;
}

/* 列表区域 */
.poll-list {
  flex: 1;
  height: calc(100vh - 180rpx);
  padding: 0;
}

/* 投票项容器 */
.poll-item-container {
  padding: 0;
  margin: 0;
  background-color: #fff;
  width: 100%;
  border-bottom: 1rpx solid #e0e0e0;
}

.movable-area {
  width: 100%;
  height: 160rpx;
  position: relative;
  background: #fff;
  overflow: hidden;
}

.movable-view {
  width: calc(100% + 160rpx);
  height: 160rpx;
  z-index: 2;
}

/* 新增内容包装器样式 */
.content-wrapper {
  display: flex;
  width: 100%;
  height: 100%;
  transform: translateX(1rpx);
}

/* 投票项主体内容 */
.poll-item {
  flex: 1;
  width: 100%;
  height: 160rpx;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  background: #fff;
}

.poll-item:hover {
  background-color: #f9f9f9;
  transform: scale(0.98);
}

.poll-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.poll-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

/* 删除按钮 */
.delete-btn {
  width: 160rpx;
  height: 160rpx;
  background: #ff4d4f;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
}

/* 空状态和错误状态 */
.empty, .error {
  text-align: center;
  color: #999;
  padding: 40rpx;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  color: #999;
  padding: 40rpx;
}

.retry-btn {
  background-color: #fff9e6;
  color: #666;
  margin-top: 20rpx;
  border: 2rpx solid #d1d3d4;
  border-radius: 20rpx;
}

/* 底部按钮容器 */
.btn-container {
  padding: 32rpx 48rpx 48rpx;
  background: #fff;
  border-top: 2rpx solid #f0f0f0;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #fff9e6;
  color: #37352f;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #d1d3d4;
}

.submit-btn:active {
  background: #fff3cc;
}
