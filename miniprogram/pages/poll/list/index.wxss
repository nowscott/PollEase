/* 整体容器 */
.container {
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--notion-bg);
}

/* 列表区域 */
.poll-list {
  flex: 1;
  height: calc(100vh - 180rpx);
  padding: 0;
}

/* 投票项容器 */
.poll-item-container {
  padding: 0;
  margin: 0;
  background-color: var(--notion-bg);
  width: 100%;
  border-bottom: 1rpx solid var(--notion-border);
}

.movable-area {
  width: 100%;
  height: 160rpx;
  position: relative;
  background: var(--color-error);
  overflow: hidden;
}

.movable-view {
  width: calc(100% + 320rpx);
  height: 160rpx;
  z-index: 2;
  margin-left: -160rpx;
  background: var(--notion-white);
}

/* 新增内容包装器样式 */
.content-wrapper {
  display: flex;
  width: calc(100% - 160rpx);
  margin-left: 160rpx;
  height: 100%;
  transform: translateX(1rpx);
  background: var(--notion-white);
}

/* 投票项主体内容 */
.poll-item {
  flex: 1;
  width: 100%;
  height: 160rpx;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  background: var(--notion-white);
}

.poll-title {
  font-size: 32rpx;
  color: var(--notion-text);
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.poll-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: var(--notion-text-light);
}

/* 删除按钮 */
.delete-btn {
  width: 160rpx;
  height: 160rpx;
  background: var(--color-error);
  color: var(--notion-white);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
}

/* 空状态和错误状态 */
.empty, .error {
  text-align: center;
  color: var(--notion-text-light);
  padding: 40rpx;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  color: var(--notion-text-light);
  padding: 40rpx;
}

.retry-btn {
  background-color: var(--color-warning);
  color: var(--notion-text);
  margin-top: 20rpx;
  border: 2rpx solid var(--notion-border);
  border-radius: 20rpx;
}

/* 底部按钮容器 */
.btn-container {
  padding: 32rpx 48rpx 48rpx;
  background: var(--notion-bg);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: var(--color-warning);
  color: var(--notion-text);
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid var(--notion-border);
}

.submit-btn:active {
  background: var(--color-warning-hover);
}
