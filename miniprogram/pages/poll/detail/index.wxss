/* pages/poll/detail/index.wxss */

.page-wrapper {
  background-color: #fafafa;
  min-height: 100vh;
  color: #37352f;
}

.container {
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 标题区域样式 */
.poll-header {
  margin: 0;
  padding: 60rpx 48rpx 48rpx;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}

.poll-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #37352f;
  margin-bottom: 24rpx;
  line-height: 1.3;
  letter-spacing: -0.02em;
}

.poll-meta {
  font-size: 24rpx;
  color: #787774;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

/* 投票内容区域 */
.poll-content {
  background: #fff;
  margin: 0;
  width: 100%;
  padding: 24rpx 0;
  flex: 1;
}

/* 投票状态标签 */
.poll-status {
  margin: 0 0 24rpx;
  padding: 0 48rpx;
  display: flex;
  justify-content: flex-start;
}

.expired-tag, .voted-tag {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 12rpx;
  border: 2px solid #d1d3d4;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.expired-tag, .voted-tag {
  background: #fff9e6;
  color: #666;
}

/* 选项样式 */
.poll-options {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 0 48rpx;
}

.option {
  background: #ffffff;
  padding: 24rpx;
  border: 2rpx solid #d1d3d4;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.2s ease;
  margin-bottom: 12rpx;
  box-sizing: border-box;
}

.option.can-vote:active {
  background: #f7f7f7;
  border-color: #d1d3d4;
}

.option-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
  padding: 0 24rpx;
  width: 100%;
}

.option-text {
  font-size: 28rpx;
  color: #37352f;
  flex: 1;
  margin-right: 32rpx;
  line-height: 1.5;
}

.vote-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 16rpx;
  min-width: max-content;
  padding: 0 24rpx;
}

.vote-count {
  font-size: 28rpx;
  color: #37352f;
  font-weight: 400;
}

.vote-percentage {
  font-size: 28rpx;
  color: #787774;
  font-weight: 400;
}

/* 加载和错误状态 */
.loading, .error {
  text-align: center;
  padding: 60rpx 40rpx;
  color: #787774;
  font-size: 28rpx;
}

.error {
  color: #666;
}

.retry-btn {
  margin-top: 24rpx;
  background: #ffffff;
  border: 2rpx solid #d1d3d4;
  color: #37352f;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  border-radius: 4rpx;
}

/* 分享按钮 */
.share-section {
  padding: 24rpx 32rpx 48rpx;
  background: #fafafa;
}

.share-btn {
  width: calc(100% - 64rpx);
  margin: 0 auto;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  background: #fff9e6;
  color: #37352f;
  font-size: 28rpx;
  font-weight: 500;
  border: 2rpx solid #d1d3d4;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn::after {
  border: none;
}

.share-btn:active {
  background: #fff3cc;
}