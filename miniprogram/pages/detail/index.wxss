/* 整体容器 */
.container {
  padding: 0;
  margin: 0;
  display: flex;
  height: 100vh;
  flex-direction: column;
  background-color: var(--bgColor);
  position: relative;
}

/* 标题区域 */
.title {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  margin: 0;
  display: flex;
  align-items: center;
  background-color: var(--bgColor);
  z-index: 100;
  box-shadow: var(--boxShadow);
}

/* 标题文本 */
.title-text {
  display: inline-block;
  padding: 0 var(--spacing-left);
  background-color: var(--backgroundColor);
}

/* 返回按钮样式 */
.return-btn {
  width: 48rpx;
  height: 48rpx;
  margin-left: var(--spacing-left);
  background-color: var(--backgroundColor);
}

/* 标题区域样式 */
.poll-header {
  margin: 0;
  padding: 0 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.poll-title {
  font-size: var(--font-xlarge);
  font-weight: 600;
  color: var(--textColor);
  letter-spacing: 0.05em;
}

.poll-meta {
  font-size: var(--font-small);
  color: var(--subTextColor);
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

/* 内容包装器 */
.content-wrapper {
  flex: 1;
  width: 100%;
  overflow: hidden;
  position: relative;
}

/* 投票内容区域 */
.poll-content {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  background-color: var(--backgroundColor);
  overflow-y: auto;
  padding: 24rpx 0;
}

/* 投票状态标签 */
.poll-status {
  margin: 0 0 24rpx;
  padding: 0 24rpx;
  display: flex;
  justify-content: flex-start;
}

.expired-tag,
.voted-tag,
.not-voted-tag {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 12rpx;
  border: 2rpx dashed var(--borderColor);
  border-radius: 8rpx;
  font-size: var(--font-small);
  color: var(--subTextColor);
}

.not-voted-tag {
  background: var(--btnColor);
}

.expired-tag,
.voted-tag {
  background: var(--btnSelected);
}

/* 选项样式 */
.poll-options {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 0 24rpx;
}

.option {
  padding: 24rpx;
  border: 4rpx dashed var(--borderColor);
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.2s ease;
  margin-bottom: 12rpx;
  box-sizing: border-box;
  background: var(--inputBgColor);
}

.option.can-vote:active {
  background: var(--btnSelected);
}

.option-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
  padding: 0 24rpx;
  width: 100%;
}

.option-text {
  font-size: var(--font-normal);
  color: var(--textColor);
  flex: 1;
  margin-right: 32rpx;
  line-height: 1.5;
}

.vote-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 16rpx;
  min-width: max-content;
  padding: 0 24rpx;
}

.vote-count {
  font-size: var(--font-normal);
  color: var(--textColor);
  font-weight: 400;
}

.vote-percentage {
  font-size: var(--font-normal);
  color: var(--textColor-light);
  font-weight: 400;
}

/* 加载和错误状态 */
.loading,
.error {
  text-align: center;
  padding: 60rpx 40rpx;
  color: var(--subTextColor);
  font-size: var(--font-normal);
}

.error {
  color: #666;
}

.retry-btn {
  margin-top: 24rpx;
  background: var(--backgroundColor);
  border: 2rpx dashed var(--borderColor);
  color: var(--textColor);
  font-size: var(--font-normal);
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0;
  padding: 0;
  line-height: 1.5;
}

.poll-info {
  text-align: center;
}

.voter-count {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.auth-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.auth-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.auth-btn::after {
  border: none;
}

/* 底部tabbar */
.toggle-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  background-color: var(--tabBarBgColor);
  padding-bottom: calc(env(safe-area-inset-bottom) + 12rpx);
  border-top: 1px solid var(--tabBarBorderColor);
}

/* 按钮基础样式 */
.toggle-button {
  width: 100%;
  text-align: center;
  font-size: var(--font-normal);
  color: #fff;
  font-weight: bold;
  transition: all 0.3s ease;
  background-color: var(--btnSelected);
  border: 3rpx dashed var(--borderColor);
  border-radius: 16rpx;
  line-height: 2;
}