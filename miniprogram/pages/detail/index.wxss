/* 整体容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: var(--bgColor);
  position: relative;
}

/* 标题区域 */
.title {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  margin: 0;
  display: flex;
  align-items: center;
  background-color: var(--bgColor);
  z-index: 100;
  box-shadow: var(--boxShadow);
}

/* 标题文本 */
.title-text {
  display: inline-block;
  padding: 0 var(--spacing-left);
  background-color: var(--backgroundColor);
}

/* 返回按钮样式 */
.return-btn {
  width: 48rpx;
  height: 48rpx;
  margin-left: var(--spacing-left);
  background-color: var(--backgroundColor);
}

/* 标题区域样式 */
.poll-header {
  margin: 0;
  padding: 0 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.poll-title {
  font-size: var(--font-xlarge);
  font-weight: 600;
  color: var(--textColor);
  letter-spacing: 0.05em;
}

.poll-meta-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 24rpx 0;
}

.poll-meta {
  font-size: var(--font-small);
  color: var(--subTextColor);
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.poll-status {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.expired-tag,
.voted-tag,
.not-voted-tag {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 12rpx;
  border: 2rpx dashed var(--borderColor);
  border-radius: 8rpx;
  font-size: var(--font-small);
  color: var(--subTextColor);
}

.not-voted-tag {
  background: var(--btnColor);
}

.expired-tag,
.voted-tag {
  background: var(--btnSelected);
}

/* 内容包装器 */
.content-wrapper {
  flex: 1;
  width: 100%;
  overflow: hidden;
  position: relative;
}

/* 投票内容区域 */
.poll-content {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  background-color: var(--backgroundColor);
  overflow-y: auto;
  padding: 24rpx 0;
}

/* 选项样式 */
.poll-options {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 0 24rpx;
}

.option {
  padding: 24rpx;
  border: 4rpx dashed var(--borderColor);
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.2s ease;
  margin-bottom: 12rpx;
  box-sizing: border-box;
  background: var(--inputBgColor);
}

.option.can-vote:active {
  background: var(--btnSelected);
}

.option-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
  padding: 0 24rpx;
  width: 100%;
}

.option-text {
  font-size: var(--font-normal);
  color: var(--textColor);
  flex: 1;
  margin-right: 32rpx;
  line-height: 1.5;
}

.vote-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 16rpx;
  min-width: max-content;
  padding: 0 24rpx;
}

.vote-count {
  font-size: var(--font-normal);
  color: var(--textColor);
  font-weight: 400;
}

.vote-percentage {
  font-size: var(--font-normal);
  color: var(--textColor-light);
  font-weight: 400;
}

/* 加载和错误状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  min-height: calc(100vh - var(--titleBarHeight) - var(--statusBarHeight) - 120rpx);
  color: var(--subTextColor);
  font-size: var(--font-normal);
}

.error {
  text-align: center;
  padding: 60rpx 40rpx;
  color: var(--subTextColor);
  font-size: var(--font-normal);
}

.retry-btn {
  margin-top: 24rpx;
  background: var(--backgroundColor);
  border: 2rpx dashed var(--borderColor);
  color: var(--textColor);
  font-size: var(--font-normal);
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0;
  padding: 0;
  line-height: 1.5;
}

.poll-info {
  text-align: center;
}

.voter-count {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.auth-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.auth-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.auth-btn::after {
  border: none;
}

/* 底部tabbar样式 */
.toggle-container {
  display: flex;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
  background-color: var(--tabBarBgColor);
  box-shadow: var(--boxShadow);
  z-index: 100;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}

.tab-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 4rpx;
}

.tab-text {
  font-size: 20rpx;
  color: var(--textColor);
  line-height: 1.2;
}

/* 添加分隔线 */
.tab-item+.tab-item {
  position: relative;
}

.tab-item+.tab-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 20%;
  height: 60%;
  width: 1rpx;
  background-color: #eee;
}

/* 按钮基础样式 */
.toggle-button {
  width: 100%;
  text-align: center;
  font-size: var(--font-normal);
  color: #fff;
  font-weight: bold;
  transition: all 0.3s ease;
  background-color: var(--btnSelected);
  border: 3rpx dashed var(--borderColor);
  border-radius: 16rpx;
  line-height: 2;
}

/* 分享按钮样式重置 */
.share-button {
  background: none;
  font-weight: normal;
  line-height: 1;
  border: none;
  padding: 10rpx 0;
  margin: 0;
}

.share-button::after {
  display: none;
}

.share-button .tab-text {
  font-size: 20rpx;
  color: var(--textColor);
  line-height: 1.2;
}

/* 投票对话框样式 */
.vote-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.vote-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.vote-modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
}

.vote-modal-header {
  text-align: center;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #eee;
}

.vote-modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.vote-modal-options {
  padding: 24rpx 0;
  max-height: 60vh;
  overflow-y: auto;
}

.vote-modal-option {
  padding: 24rpx;
  margin: 16rpx 0;
  background: #f5f5f5;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.vote-modal-option.selected {
  background: #e6f7ff;
  border: 2rpx solid #1890ff;
}

.vote-modal-footer {
  display: flex;
  justify-content: space-between;
  padding-top: 24rpx;
  border-top: 1rpx solid #eee;
}

.vote-modal-cancel,
.vote-modal-confirm {
  flex: 1;
  margin: 0 12rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 32rpx;
}

.vote-modal-cancel {
  background: #f5f5f5;
  color: #666;
}

.vote-modal-confirm {
  background: var(--btnSelected);
  color: #fff;
}

.vote-modal-confirm[disabled] {
  background: #ccc;
  color: #fff;
}