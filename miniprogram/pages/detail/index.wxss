/* 整体容器 */
.container {
  padding: 0;
  margin: 0;
  display: flex;
  height: 100vh;
  flex-direction: column;
  background-color: var(--bgColor);
}

/* 标题区域 */
.title {
  width: 100%;
  margin: 0;
}

/* 返回按钮样式 */
.return-btn {
  width: 48rpx;
  height: 48rpx;
  display: inline-block;
  padding: 0 var(--spacing-left);
}

/* 标题区域样式 */
.poll-header {
  margin: 0;
  padding: 0 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.poll-title {
  font-size: var(--font-xlarge);
  font-weight: 600;
  color: var(--textColor);
  letter-spacing: 0.05em;
}

.poll-meta {
  font-size: var(--font-small);
  color: var(--subTextColor);
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

/* 投票内容区域 */
.poll-content {
  margin: 0;
  width: 100%;
  padding: 24rpx 0;
  flex: none;
}

/* 投票状态标签 */
.poll-status {
  margin: 0 0 24rpx;
  padding: 0 24rpx;
  display: flex;
  justify-content: flex-start;
}

.expired-tag, .voted-tag, .not-voted-tag {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 12rpx;
  border: 2rpx dashed var(--borderColor);
  border-radius: 8rpx;
  font-size: var(--font-small);
  color: var(--subTextColor);
}
.not-voted-tag{
  background: var(--btnColor);
}
.expired-tag,.voted-tag{
  background: var(--btnSelected);
}

/* 选项样式 */
.poll-options {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 0 24rpx;
}

.option {
  padding: 24rpx;
  border: 2rpx dashed var(--borderColor);
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.2s ease;
  margin-bottom: 12rpx;
  box-sizing: border-box;
  background: var(--inputBgColor);
}

.option.can-vote:active {
  background: var(--btnSelected);
}

.option-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
  padding: 0 24rpx;
  width: 100%;
}

.option-text {
  font-size: var(--font-normal);
  color: var(--textColor);
  flex: 1;
  margin-right: 32rpx;
  line-height: 1.5;
}

.vote-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 16rpx;
  min-width: max-content;
  padding: 0 24rpx;
}

.vote-count {
  font-size: var(--font-normal);
  color: var(--textColor);
  font-weight: 400;
}

.vote-percentage {
  font-size: var(--font-normal);
  color: var(--textColor-light);
  font-weight: 400;
}

/* 加载和错误状态 */
.loading, .error {
  text-align: center;
  padding: 60rpx 40rpx;
  color: var(--subTextColor);
  font-size: var(--font-normal);
}

.error {
  color: #666;
}

.retry-btn {
  margin-top: 24rpx;
  background: var(--backgroundColor);
  border: 2rpx dashed var(--borderColor);
  color: var(--textColor);
  font-size: var(--font-normal);
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
}

/* 分享按钮 */
.share-section {
  padding: 24rpx 32rpx 48rpx;
  background: var(--backgroundColor);
  display: flex;
  justify-content: center;
}

.share-btn {
  min-width: 160rpx;
  width: fit-content;
  height: 88rpx;
  background: var(--btnSelected);
  color: #fff;
  font-size: var(--font-medium);
  font-weight: 500;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed var(--borderColor);
  padding: 0 48rpx;
  margin: 0;
  transition: all 0.2s ease;
  white-space: nowrap;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0;
  padding: 0;
  line-height: 1.5;
}

.poll-info {
  text-align: center;
}

.voter-count {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.auth-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.auth-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}
.auth-btn::after {
  border: none;
}
