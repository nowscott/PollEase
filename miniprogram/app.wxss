/**app.wxss**/
page {
  /* Notion 风格的基础颜色变量 */
  --notion-white: #ffffff;
  --notion-bg: #f7f6f3;
  --notion-text: #37352f;
  --notion-text-light: #787774;
  --notion-border: #e6e6e6;
  --notion-hover: #f1f1ef;
  
  /* 扩展的颜色变量 */
  --color-error: #ff4d4f;
  --color-success: #52c41a;
  --color-warning: #fff9e6;
  --color-warning-hover: #fff3cc;
  --color-disabled: #f5f5f5;
  --color-disabled-text: #999;
  --color-border-light: #f0f0f0;
  --color-background-light: #000;
  
  /* 全局背景色和文字颜色 */
  background: var(--notion-bg);
  color: var(--notion-text);
  font-size: 28rpx;
  line-height: 1.5;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: var(--notion-white);
  min-height: 100vh;
  padding: 24rpx;
}

/* 按钮样式 */
button {
  background: var(--notion-white);
  color: var(--notion-text);
  border: 1px solid var(--notion-border);
  border-radius: 6rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  transition: all 0.2s ease;
}

button:active {
  background: var(--notion-hover);
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

/* 输入框样式 */
input {
  background: var(--notion-white);
  border: 1px solid var(--notion-border);
  border-radius: 6rpx;
  padding: 16rpx;
  color: var(--notion-text);
}

/* 标题样式 */
.title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--notion-text);
  margin-bottom: 24rpx;
}

/* 卡片样式 */
.card {
  background: var(--notion-white);
  border: 1px solid var(--notion-border);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  background: var(--notion-hover);
  color: var(--notion-text-light);
}

/* 分割线样式 */
.divider {
  height: 1px;
  background: var(--notion-border);
  width: 100%;
  margin: 24rpx 0;
}