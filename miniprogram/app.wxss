/**app.wxss**/
page {
  /* 扩展的颜色变量 */
  --tabBarBgColor: #fff;
  --tabBarBorderColor: #dcdcdc;
  --boxShadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  --bgColor: #f7f6f3;
  --dividerColor: #d6d3cb;
  --textColor: #000;
  --subTextColor: rgba(0, 0, 0, 0.6); /* 黑色的 60% 不透明度 */
  --inputBgColor: #fff;
  --templatrsColor: #fff;
  --btnColor: #8a8a8a;
  --btnSelected: #eeb172;
  --borderColor: #d6d3cb;
  --color-error: #ff4d4f;
  --color-success: #6bb56d;
  --color-warning: #fff9e6;
  --color-warning-hover: #fff3cc;
  --color-disabled-text: #777777;
  --color-border-light: #f0f0f0;
}
/* 在深色模式下定义颜色变量 */
@media (prefers-color-scheme: dark) {
  page {
    --tabBarBgColor: #000;
    --tabBarBorderColor: #232323;
    --boxShadow: 0 2rpx 10rpx rgba(255, 255, 255, 0.1);
    --bgColor: #3a3937;
    --dividerColor: #6b685f;
    --textColor: #6a6965;
    --subTextColor: rgba(255, 255, 255, 0.6);/* 白色的 60% 不透明度 */
    --inputBgColor: #000;
    --templatrsColor: #000;
    --borderColor: #6b685f;
  }
}

.title {
  font-size: var(--font-xlarge);
  font-weight: 600;
  color: var(--textColor);
}

page {
  /* 全局背景色和文字颜色 */
  color: var(--textColor);
  font-size: var(--font-normal);
  line-height: 1.5;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  --spacing-left: 24rpx;
  
  /* 添加字体相关的全局设置 */
  font-family: 
+   "Noto Serif SC",
+   "Source Han Serif SC",
+   "Songti SC",
+   "SimSun",
+   serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
  
  /* 基础字号设置 - 默认尺寸（手机） */
  --font-small: 24rpx;
  --font-normal: 28rpx;
  --font-medium: 32rpx;
  --font-large: 40rpx;
  --font-xlarge: 48rpx;
  
  /* iPad 等大屏幕设备的字号缩放 */
  --font-scale: 1;
}

/* iPad 和其他大屏设备适配 */
@media screen and (min-width: 768px) {
  page {
    --font-scale: 0.7;  /* 缩小字体比例 */
    --font-small: calc(24rpx * var(--font-scale));
    --font-normal: calc(28rpx * var(--font-scale));
    --font-medium: calc(32rpx * var(--font-scale));
    --font-large: calc(40rpx * var(--font-scale));
  }
}

/* 超大屏幕（如 iPad Pro）适配 */
@media screen and (min-width: 1024px) {
  page {
    --font-scale: 0.6;  /* 进一步缩小字体比例 */
    --font-small: calc(24rpx * var(--font-scale));
    --font-normal: calc(28rpx * var(--font-scale));
    --font-medium: calc(32rpx * var(--font-scale));
    --font-large: calc(40rpx * var(--font-scale));
  }
}

/* 添加深色模式变量 */
@media (prefers-color-scheme: dark) {
  page {
    --notion-white: #1f1f1f;
    --notion-bg: #000000;
    --textColor: #ffffff;
    --textColor-light: #cccccc;
    --notion-border: #333333;
    --notion-hover: #2f2f2f;
    
    /* 深色模式下的扩展颜色 */
    --color-error: #ff4d4f;
    --color-success: #52c41a;
    --color-warning: #2b2111;
    --color-warning-hover: #332914;
    --color-disabled-text: #999999;
    --color-border-light: #333333;
  }
}

/* 定义自定义字体 */
@font-face {
  font-family: 'ZhunBianTaoTi';
  src: url('https://chinese-fonts-cdn.deno.dev/packages/zhbtt/dist/字魂扁桃体/result.woff2') format('woff2');
  font-weight: normal;
  font-style: normal;
}