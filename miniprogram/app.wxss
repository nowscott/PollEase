/**app.wxss**/
page {
  /* Notion 风格的基础颜色变量 */
  --notion-white: #ffffff;
  --notion-bg: #f7f6f3;
  --notion-text: #37352f;
  --notion-text-light: #555555;
  --notion-border: #e6e6e6;
  --notion-hover: #f1f1ef;
  
  /* 扩展的颜色变量 */
  --color-error: #ff4d4f;
  --color-success: #6bb56d;
  --color-warning: #fff9e6;
  --color-warning-hover: #fff3cc;
  --color-disabled-text: #777777;
  --color-border-light: #f0f0f0;
  
  /* 全局背景色和文字颜色 */
  background: var(--notion-bg);
  color: var(--notion-text);
  font-size: var(--font-normal);
  line-height: 1.5;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  
  /* 添加字体相关的全局设置 */
  font-family: 
+   "Noto Serif SC",
+   "Source Han Serif SC",
+   "Songti SC",
+   "SimSun",
+   serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-rendering: optimizeLegibility;
  
  /* 基础字号设置 - 默认尺寸（手机） */
  --font-small: 24rpx;
  --font-normal: 28rpx;
  --font-medium: 32rpx;
  --font-large: 40rpx;
  
  /* iPad 等大屏幕设备的字号缩放 */
  --font-scale: 1;
}

/* iPad 和其他大屏设备适配 */
@media screen and (min-width: 768px) {
  page {
    --font-scale: 0.7;  /* 缩小字体比例 */
    --font-small: calc(24rpx * var(--font-scale));
    --font-normal: calc(28rpx * var(--font-scale));
    --font-medium: calc(32rpx * var(--font-scale));
    --font-large: calc(40rpx * var(--font-scale));
  }
}

/* 超大屏幕（如 iPad Pro）适配 */
@media screen and (min-width: 1024px) {
  page {
    --font-scale: 0.6;  /* 进一步缩小字体比例 */
    --font-small: calc(24rpx * var(--font-scale));
    --font-normal: calc(28rpx * var(--font-scale));
    --font-medium: calc(32rpx * var(--font-scale));
    --font-large: calc(40rpx * var(--font-scale));
  }
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: var(--notion-bg);
  min-height: 100vh;
  padding: 24rpx;
}

/* 按钮样式 */
button {
  background: var(--notion-white);
  color: var(--notion-text);
  border: 1px solid var(--notion-border);
  border-radius: 6rpx;
  padding: 16rpx 24rpx;
  font-size: var(--font-normal);
  transition: all 0.2s ease;
  font-weight: 400;
  letter-spacing: 0.3px;
}

button:active {
  background: var(--notion-hover);
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

/* 输入框样式 */
input {
  background: var(--notion-white);
  border: 1px solid var(--notion-border);
  border-radius: 6rpx;
  padding: 16rpx;
  color: var(--notion-text);
  font-size: var(--font-normal);
  letter-spacing: 0.2px;
}

/* 标题样式 */
.title {
  font-size: var(--font-large);
  font-weight: 600;
  color: var(--notion-text);
  margin-bottom: 24rpx;
}

/* 卡片样式 */
.card {
  background: var(--notion-white);
  border: 1px solid var(--notion-border);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  background: var(--notion-hover);
  color: var(--notion-text-light);
}

/* 分割线样式 */
.divider {
  height: 1px;
  background: var(--notion-border);
  width: 100%;
  margin: 24rpx 0;
}

/* 添加深色模式变量 */
@media (prefers-color-scheme: dark) {
  page {
    --notion-white: #1f1f1f;
    --notion-bg: #000000;
    --notion-text: #ffffff;
    --notion-text-light: #cccccc;
    --notion-border: #333333;
    --notion-hover: #2f2f2f;
    
    /* 深色模式下的扩展颜色 */
    --color-error: #ff4d4f;
    --color-success: #52c41a;
    --color-warning: #2b2111;
    --color-warning-hover: #332914;
    --color-disabled-text: #999999;
    --color-border-light: #333333;
  }
}

/* 标题文字样式优化 */
.poll-title {
  font-weight: 500;  /* 使用稍细的字重 */
  letter-spacing: 0.2px;
  font-size: var(--font-medium);
}

/* 正文文字样式优化 */
.poll-info {
  font-size: var(--font-small);
  letter-spacing: 0.2px;
}

/* 按钮文字样式优化 */
button {
  font-weight: 400;
  letter-spacing: 0.3px;
}

/* 输入框文字样式优化 */
input {
  font-size: var(--font-normal);
  letter-spacing: 0.2px;
}

/* 定义自定义字体 */
@font-face {
  font-family: 'ZhunBianTaoTi';
  src: url('https://chinese-fonts-cdn.deno.dev/packages/zhbtt/dist/字魂扁桃体/result.woff2') format('woff2');
  font-weight: normal;
  font-style: normal;
}